<resources>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/IDoCareButtonStyle</item>
        <item name="buttonBarStyle">@style/IDoCareButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/IDoCareButtonStyle</item>
    </style>


    <!-- ActionBar style -->
    <style name="IDoCareActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Default button style-->
    <style name="IDoCareButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/dark_green_button_background</item>

    </style>


</resources>
