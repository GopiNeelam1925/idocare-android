<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Title"/>

        <TextView
            android:id="@+id/txt_rating"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Rating"/>

    </LinearLayout>


    <!-- Either the Image or the Text views should be shown, but not both -->
    <ImageView
        android:id="@+id/image_request_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_request_thumbnail_height"
        android:layout_margin="@dimen/fragment_default_margin"
        android:visibility="gone"
        android:contentDescription="@string/image_request_thumbnail_content_description" />

    <TextView
        android:id="@+id/text_request_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_request_thumbnail_height"
        android:layout_margin="@dimen/fragment_default_margin"
        android:visibility="visible"
        android:gravity="center"/>

</LinearLayout>