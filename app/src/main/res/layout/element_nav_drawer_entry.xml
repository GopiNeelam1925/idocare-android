<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_icon"
        android:minHeight="@dimen/nav_drawer_item_min_height"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/nav_drawer_icon_margin_left"
        android:layout_marginStart="@dimen/nav_drawer_icon_margin_left"
        android:layout_gravity="center_vertical"/>


    <TextView
        android:id="@+id/txt_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/nav_drawer_title_margin_left"
        android:layout_marginStart="@dimen/nav_drawer_title_margin_left"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"/>

</merge>