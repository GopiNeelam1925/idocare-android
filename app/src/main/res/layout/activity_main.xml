

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <!--
    Setting clickable to true in order to resolve bug with Navigation Drawer:
    http://stackoverflow.com/questions/18044277/android-navigation-drawer-bug-using-the-sample
    -->
    <FrameLayout
        android:id="@+id/frame_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/frame_contents_padding"
        android:background="@drawable/default_fragment_background"/>


    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/drawer_contents"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:paddingTop="@dimen/fragment_default_padding"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/fragment_bg_dark"/>

</android.support.v4.widget.DrawerLayout>