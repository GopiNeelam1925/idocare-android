<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/fragment_tiny_padding"
    android:paddingLeft="@dimen/fragment_default_padding"
    android:paddingStart="@dimen/fragment_default_padding"
    android:paddingRight="@dimen/fragment_default_padding"
    android:paddingEnd="@dimen/fragment_default_padding">

    <ImageView
        android:id="@+id/img_picture0"
        android:layout_width="@dimen/request_picture_width"
        android:layout_height="@dimen/request_picture_height"
        android:contentDescription="@string/img_picture_accessibility"
        android:layout_marginRight="@dimen/fragment_tiniest_padding"
        android:layout_marginEnd="@dimen/fragment_tiniest_padding"
        android:scaleType="centerCrop"
        android:cropToPadding="true"/>

    <ImageView
        android:id="@+id/img_picture1"
        android:layout_width="@dimen/request_picture_width"
        android:layout_height="@dimen/request_picture_height"
        android:contentDescription="@string/img_picture_accessibility"
        android:layout_marginLeft="@dimen/fragment_tiniest_padding"
        android:layout_marginStart="@dimen/fragment_tiniest_padding"
        android:layout_marginRight="@dimen/fragment_tiniest_padding"
        android:layout_marginEnd="@dimen/fragment_tiniest_padding"
        android:scaleType="centerCrop"
        android:cropToPadding="true"/>

    <ImageView
        android:id="@+id/img_picture2"
        android:layout_width="@dimen/request_picture_width"
        android:layout_height="@dimen/request_picture_height"
        android:contentDescription="@string/img_picture_accessibility"
        android:layout_marginLeft="@dimen/fragment_tiniest_padding"
        android:layout_marginStart="@dimen/fragment_tiniest_padding"
        android:scaleType="centerCrop"
        android:cropToPadding="true"/>

</LinearLayout>