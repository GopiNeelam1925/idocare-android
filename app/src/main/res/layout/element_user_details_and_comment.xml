<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/fragment_default_padding"
    android:paddingStart="@dimen/fragment_default_padding"
    android:paddingRight="@dimen/fragment_default_padding"
    android:paddingEnd="@dimen/fragment_default_padding">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/img_user_picture"
        android:layout_width="@dimen/user_small_picture_size"
        android:layout_height="@dimen/user_small_picture_size"
        android:layout_below="@id/txt_title"
        android:contentDescription="@string/img_user_picture_accessibility"/>

    <TextView
        android:id="@+id/txt_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_toRightOf="@id/img_user_picture"
        android:layout_toEndOf="@id/img_user_picture"
        android:layout_marginLeft="@dimen/fragment_tiny_padding"
        android:layout_marginStart="@dimen/fragment_tiny_padding"
        style="@style/NicknameTextViewStyle"/>

    <TextView
        android:id="@+id/txt_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user_nickname"
        android:layout_toRightOf="@id/img_user_picture"
        android:layout_toEndOf="@id/img_user_picture"
        android:layout_marginLeft="@dimen/fragment_tiny_padding"
        android:layout_marginStart="@dimen/fragment_tiny_padding"
        style="@style/DateTextViewStyle"/>


    <ImageView
        android:id="@+id/img_user_reputation_star"
        android:layout_width="@dimen/small_reputation_star_picture_size"
        android:layout_height="@dimen/small_reputation_star_picture_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/fragment_default_padding"
        android:layout_marginStart="@dimen/fragment_default_padding"
        android:layout_marginTop="@dimen/fragment_tiniest_padding"
        android:layout_below="@id/img_user_picture"
        android:src="@drawable/ic_star_large"/>

    <TextView
        android:id="@+id/txt_user_reputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_user_reputation_star"
        android:layout_toEndOf="@id/img_user_reputation_star"
        android:layout_below="@id/img_user_picture"
        android:layout_marginTop="@dimen/fragment_tiniest_padding"
        style="@style/ReputationTextViewStyleSmall"/>

    <ImageView
        android:id="@+id/img_vote_up"
        android:clickable="true"
        android:layout_width="@dimen/vote_image_button_size"
        android:layout_height="@dimen/vote_image_button_size"
        android:layout_below="@id/txt_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/fragment_small_padding"
        android:src="@drawable/ic_plus"
        android:contentDescription="@string/btn_vote_up_accessibility" />


    <include layout="@layout/element_reputation_star"
        android:layout_width="@dimen/reputation_star_picture_size"
        android:layout_height="@dimen/reputation_star_picture_size"
        android:layout_below="@id/txt_title"
        android:layout_toLeftOf="@id/img_vote_up"
        android:layout_toStartOf="@id/img_vote_up"/>


    <ImageView
        android:id="@+id/img_vote_down"
        android:clickable="true"
        android:layout_width="@dimen/vote_image_button_size"
        android:layout_height="@dimen/vote_image_button_size"
        android:layout_below="@id/txt_title"
        android:layout_toLeftOf="@id/frame_reputation"
        android:layout_toStartOf="@id/frame_reputation"
        android:layout_marginTop="@dimen/fragment_small_padding"
        android:src="@drawable/ic_minus"
        android:contentDescription="@string/btn_vote_down_accessibility" />


    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fragment_default_padding"
        android:layout_marginEnd="@dimen/fragment_default_padding"
        android:layout_below="@id/txt_user_reputation"
        android:layout_marginTop="@dimen/fragment_tiniest_padding"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>